%tr
  - if comment.created_by?(current_user)
    %td.comment-body
      = link_to comment.body, edit_polymorphic_path([parent, comment]), remote: true
    %td.comment-action.text-right
      = link_to polymorphic_path([parent, comment]), method: :delete, remote: true, data: { confirm: "Are you sure?" } do
        %i.glyphicon.glyphicon-remove-sign
  - else
    %td.comment-body=comment.body
    %td.comment-action.text-right
