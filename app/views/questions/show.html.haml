%p#notice= notice

%h3= @question.title

.col-sm-12
  .col-sm-1
    .btn-block
      = link_to vote_up_question_path(@question), method: :post, remote: true do
        %i{class: "js-vote-count vote-arrow-style glyphicon glyphicon-chevron-up"}
    .btn-block
      %span{class: "badge js-vote-score"}0
    .btn-block
      = link_to vote_down_question_path(@question), method: :delete, remote: true do
        %i{class: "js-vote-count vote-arrow-style glyphicon glyphicon-chevron-down"}
  .col-sm-5
    %pre=@question.body
    .row.col-sm-12
      = render partial: 'shared/qa_info', locals: { item: @question }

= render 'answers/index'
= render 'answers/new'

